<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="SplashScreen">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="Animations" />

    <!-- style of the text view in the fuelstationlist.xml / blue #0000ff-->
    <style name="CarListTextView">
        <item name="android:textColor">#ff9900</item>
    </style>

    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />

 
    <declare-styleable name="ImageOnlyButton">
        <attr name="resourceNotFocused" format="integer" />
        <attr name="resourceFocused" format="integer" />
        <attr name="resourcePressed" format="integer" />
    </declare-styleable>
    <declare-styleable name="TextOnlyButton">
        <attr name="textColorNotFocused" format="integer" />
        <attr name="textColorFocused" format="integer" />
        <attr name="textColorPressed" format="integer" />
    </declare-styleable>

    <style name="SelectorButton">
        <item name="android:width">100dip</item>
        <item name="android:height">130dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingBottom">8dip</item>
    </style>

   
    
</resources>